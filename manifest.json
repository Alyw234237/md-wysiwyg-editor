{
  "name": "Text Editor",
  "short_name": "TextEdit",
  "description": "Text Editor - PWA + TinyMCE + NFS.",
  "start_url": "./",
  "display": "standalone",
  "lang": "en-US",
  "theme_color": "#FFFFFF",
  "background_color": "#FFFFFF",
  "icons": [
    {
      "src": "./images/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "./images/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "file_handlers": [
    {
      "action": "/text-editor/",
      "accept": {
        "text/markdown": [".md", ".markdown"]
      }
    },
    {
      "action": "/text-editor/",
      "accept": {
        "text/plain": [".txt", ".text"]
      }
    },
    {
      "action": "/text-editor/",
      "accept": {
        "text/html": [".html", ".htm"]
      }
    }
  ]
}

